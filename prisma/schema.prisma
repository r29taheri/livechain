generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Stream {
  id  String
  key String
}

type StreamHistory {
  id        String   @default(cuid())
  createdAt DateTime @default(now())
}

